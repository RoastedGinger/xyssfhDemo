<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    android:visibility="visible">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pictures"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"

        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="3dp" />

    <RelativeLayout
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/pictures"
        android:layout_toEndOf="@+id/pictures"
        android:layout_alignBottom="@+id/pictures"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/name"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"

            android:text="See More..."
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/mainframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/date"
            android:layout_gravity="center"
            android:textStyle="bold"
             android:elevation="0dp"
            android:gravity="center"
            android:maxLines="1"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="2dp"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:selectAllOnFocus="false"
            android:text="messeageifhosdh ssodjfodsijoidsj here"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:clickable="false"
            android:elevation="1dp"
            android:freezesText="false"
            android:gravity="center"
            android:isScrollContainer="false"
            android:linksClickable="false"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Face of The Week"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/textView9"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:text="Aug 31"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>