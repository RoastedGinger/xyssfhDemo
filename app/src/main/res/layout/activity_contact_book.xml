<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sddg"
    android:orientation="vertical"

    tools:context="com.pritz.sikkimuniversity.contact_book">


    <EditText
        android:id="@+id/find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/frm"
        android:hint="Search.... "
        android:inputType="textVisiblePassword"
android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"


        android:textColor="@color/colorAccent"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />


    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:dividerHeight="2sp"
        android:layout_below="@+id/find"
        tools:ignore="ObsoleteLayoutParam" />

</LinearLayout>
