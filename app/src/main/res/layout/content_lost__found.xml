<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_lost__found"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pritz.sikkimuniversity.Lost_Found"
    tools:showIn="@layout/activity_lost__found">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/shape"
        android:id="@+id/ltitle"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/lost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Lost /found title " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/ldetail"
        android:background="@drawable/shape"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/ltitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Details"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        app:srcCompat="@mipmap/add_btn"
        android:id="@+id/lost"
        android:layout_width="650dp"
        android:layout_height="200dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
