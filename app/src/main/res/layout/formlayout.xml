<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    app:layout_collapseParallaxMultiplier="1.0">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainframe"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="2dp"
        android:text="Aug 31,2017 9:32:24 Pm"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage" />
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dll"
     android:orientation="vertical">
    <TextView
        android:id="@+id/mainframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:elevation="0dp"
        android:nestedScrollingEnabled="false"
        android:padding="2dp"
        android:textStyle="bold"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:selectAllOnFocus="false"
        android:text="messeage here"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,TextFields,UnusedAttribute" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:elevation="1dp"
        android:freezesText="false"
        android:isScrollContainer="false"
        android:linksClickable="false"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:text="-Pritam Shah(Computer Applications)"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        tools:ignore="Deprecated,HardcodedText,SpUsage,UnusedAttribute" />
</LinearLayout>
</LinearLayout>